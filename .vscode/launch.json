    "version": "0.2.0",
    "configurations": [
        {
            "name": "ENet: Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/enet/Debug/scion-enet-demo",
            "args": [
                "--sciond", "127.0.0.19:30255",
                "--bind", "127.0.0.1:32000"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "ENet: Client",
